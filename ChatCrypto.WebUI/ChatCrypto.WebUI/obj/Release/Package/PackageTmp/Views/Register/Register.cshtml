@model ChatCrypto.WebUI.Models.Account

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<html>
<head>

    <meta charset="utf-8" />
    <title>Register</title>
    
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Context/assets/images/favicon.ico" id="tabIcon">


    <!-- Bootstrap Css -->
    <link href="~/Context/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/Context/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/Context/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />


</head>
<body>

    <div class="auth-bg">
        <div class="container-fluid p-0">
            <div class="row g-0">
                <div class="col-xl-3 col-lg-4">
                    <div class="p-4 pb-0 p-lg-5 pb-lg-0 auth-logo-section">
                        <div class="text-white-50">
                            
                                
                        </div>
                        <div class="mt-auto">
                            <img src="~/Context/assets/images/auth-img.png" alt="" class="auth-img">
                        </div>
                    </div>
                </div>
                <!-- end col -->
                <div class="col-xl-9 col-lg-8">
                    <div class="authentication-page-content">
                        <div class="d-flex flex-column h-100 px-4 pt-4">
                            <div class="row justify-content-center my-auto">
                                <div class="col-sm-8 col-lg-6 col-xl-5 col-xxl-4">

                                    <div class="py-md-5 py-4">

                                        <div class="text-center mb-5">
                                            <h3>Register Account</h3>
                                            
                                            <p class="text-muted">Get your free Chat account now.</p>
                                            <span style="color:red;"> @ViewBag.ErrorMessage</span>
                                        </div>
                                        @using (Html.BeginForm("Register", "Register", FormMethod.Post, new { enctype = "multipart/form-data" }))

                                         {
                                            @Html.AntiForgeryToken()




                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <form class="needs-validation" novalidate action="index.html">
                                                <div class="mb-3">
                                                    <label for="useremail" class="form-label">Email</label>
                                                    <input type="email" name="Email" class="form-control" id="useremail" placeholder="Enter email" required>
                                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                    <div class="invalid-feedback">
                                                        Please Enter Email
                                                    </div>
                                                </div>
                                                <div class="mb-3">
                                                    <label for="username" class="form-label">Username</label>
                                                    <input type="text" name="Username" class="form-control" id="username" placeholder="Enter username" required>
                                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                                    <div class="invalid-feedback">
                                                        Please Enter Username
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <label for="userpassword" class="form-label">Password</label>
                                                    <input type="password" name="Password" class="form-control" id="userpassword" placeholder="Enter password" required>
                                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                    <div class="invalid-feedback">
                                                        Please Enter Password
                                                    </div>
                                                </div>


                                                <div class="mb-3">
                                                    <label for="usergender" class="form-label">Gender</label>
                                                    <select name="Gender" class="form-select form-select-sm">
                                                        <option value="True" selected>Male</option>
                                                        <option value="False">Female</option>
                                                    </select>
                                                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                                                    <div class="invalid-feedback">
                                                        Please Enter Your Gender
                                                    </div>
                                                </div>


                                                <div class="mb-3">
                                                    <button class="btn btn-primary w-100 waves-effect waves-light" type="submit">Register</button>
                                                </div>

                                            </form><!-- end form -->

                                            <div class="mt-5 text-center text-muted">
                                                <p>Already have an account ? <a href="~/Login/Login" class="fw-medium text-decoration-underline">Login</a></p>
                                            </div>
                                        }</div>
                                    </div><!-- end col -->
                                </div><!-- end row -->
                            </div>
                        </div>
                    </div>
                    <!-- end col -->
                </div>
                <!-- end row -->
            </div>
            <!-- end container-fluid -->
        </div>
        <!-- end auth bg -->

        <!-- JAVASCRIPT -->
        <script src="~/Context/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/Context/assets/libs/simplebar/simplebar.min.js"></script>
        <script src="~/Context/assets/libs/node-waves/waves.min.js"></script>
        <!-- validation init -->
        <script src="~/Context/assets/js/pages/validation.init.js"></script>

        <!-- theme-style init -->
        <script src="~/Context/assets/js/pages/theme-style.init.js"></script>

        <script src="~/Context/assets/js/app.js"></script>

    </body>
</html>
